      "label" : "Export",
      "fxn" : "var row = section.getCurrentSet().getInstance();\nvar model = row.getValue('ModelName');\nvar moduleName = row.getValue('ModelModule');\n$scope.Logger.info('Exporting...');\n$scope.$http.post('/export/' + moduleName + '/Model/' + model).success(function(data) { $scope.Logger.info(data.message) });"
    }, {
      "label" : "Test",
      "fxn" : "var row = section.getCurrentSet().getInstance();\nvar model = row.getValue('ModelName');\nvar url = \"/data/\" + model;\nwindow.open(url);"
    }, {
      "label" : "Add Fields",
      "fxn" : "var model = data.getInstance();\nvar tableName = model.getValue('ModelBasisTable');\nLogger.info('Finding columns...');\nServer.read('ListTableColumns', 'ColumnTableName Equals \"' + tableName + '\"').then(function (results) {\n    var modelName = model.getValue('ModelName');\n    var fieldSet = model.getChild('ModelFields');\n    var added = 0;\n    _.forEach(results.data.rows, function (row) {\n        var basisColumn = row.data.ColumnName;\n        var matches = fieldSet.find(function (instance) {\n            return instance.getValue('ModelFieldBasisColumn') === basisColumn;\n        });\n        if (!matches) {\n            fieldSet.insert({\n                ModelFieldBasisColumn: basisColumn,\n                ModelFieldName: modelName + basisColumn\n            });\n            added++;\n        }\n    });\n    Logger.info('Added ' + added + ' new field(s)');\n});"
    } ]
